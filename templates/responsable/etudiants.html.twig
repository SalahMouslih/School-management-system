{% extends 'base.html.twig' %}

{% block title %}Responsable{% endblock %}

{% block body %}
<div class="card rounded border-success m-2 mx-auto" style="max-width: 85rem">
    <h1 id="nav-breadcrumbs" class="mt-5 display-3 text-center text-success">Les étudiants</h1>
    <div class="m-5 d-flex flex-wrap justify-content-center">
        {% if etudiants|length != 0 %}
        {% for etudiant in etudiants %}
        <div class="m-5 card border-success mb-3 rounded" style="max-width: 30rem;">
            <div class="card-header text-white bg-success"></div>
            <div class="card-body">
                <h4 class="card-title"></h4>
                <p class="card-text text-center">{{ etudiant.nom ~ ' ' ~ etudiant.prenom }}</p>
            </div>
            <div class="card-footer form-inline my-2 my-lg-0 justify-content-center">
                <a class="nav-link text-info my-2 my-sm-0" href="{{ path('etudiant_accueil', {'id': etudiant.id}) }}">Plus de détails</a>
            </div>
            <div class="card-footer form-inline my-2 my-lg-0 justify-content-center">
                <a class="nav-link text-success my-2 my-sm-0" href="#">Modifier</a>
            </div>
            <div class="card-footer form-inline my-2 my-lg-0 justify-content-center">
                <a class="nav-link text-danger my-2 my-sm-0" href="{{ path('responsable_suppression_etudiant', {'id': etudiant.id}) }}">Supprimer</a>
            </div>
        </div>
        {% endfor %}
        {% else %}
            <div class="jumbotron m-5">
                <h3 class="display-5">Aucun 
                    <span class="text-success">étudiant</span> de la 
                    <span class="text-success">{{ niveau.nom }}</span> n'est ajouté
                    {% if filiere is defined %} dans la filière <span class="text-success">{{ filiere.nom }}</span>{% endif %} pour le moment.
                </h3>
                <hr class="my-4">
                <p class="lead text-center">
                    <a class="btn btn-success btn-lg" href="{{ path('responsable_registration') }}" role="button">Ajouter un(e) étudiant(e)</a>
                </p>
            </div>
        {% endif %}
    </div>
{% endblock %}
