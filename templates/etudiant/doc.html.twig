{% extends 'base.html.twig' %}

{% block title %}Certificat{% endblock %}

{% block body %}

{% if demande.accepted == 1  %}
<a class="m-3 btn btn-primary" href="{{ path('etudiant_accueil' , { 'id': etudiant.id}) }}}">Retour</a>

<img style="height:110px; width:110px;  display: block;margin-left: auto;
            margin-right: auto;" src="https://upload.wikimedia.org/wikipedia/commons/thumb/0/05/INSEA_logo.png/552px-INSEA_logo.png">
 
 <p class="m-3 text-center">INSTITUT NATIONAL DE STATISTIQUE ET D'ÉCONOMIE APPLIQUÉE</p>
 <hr class="m-7">
<h3 class="text-center">Certificat de scolarité</h3>
    <div class="m-5">
                <p class="text-center">Nom : {{ etudiant.nom  }}</p>
                <p class="text-center">Prénom : {{ etudiant.prenom  }}</p>
                <p class="text-center">Cycle : {{ etudiant.cycle.nom}}</p>
                <p class="text-center">Filiere : {{ etudiant.filiere.nom}}</p>
                <p class="text-center">Niveau : {{ etudiant.niveau.nom}}</p>
                <p class="text-center">Année scolaire : 2019/2020</p>
           </div>
                <div> <p><img style="height:140px; width:140px;  display: block, float:left ; margin: 0px 1000px" src="{{ asset('images/') ~ "cachet.png" }}"><p>
                 <p class="text-center">issue le {{ etudiant.niveau.nom}}<p>
                <a class=" text-success text-center" style="display: block;margin-left: auto;
            margin-right: auto;" href="{{ path('etudiant_impression', { 'id': etudiant.id} ) }}">Télecharger</a>
            </div>  


{% else %}

<div class="alert alert-dismissible alert-warning">
  <button type="button" class="close" data-dismiss="alert">&times;</button>
  <h4 class="alert-heading">Demande en cours de traitement</h4>
  <p class="mb-0">votre demande est en cours de traitement. Veuillez revenir plus tard </p>
</div>
<a class="m-3 btn btn-primary" href="{{ path('etudiant_accueil' , { 'id': etudiant.id}) }}}">Retour</a>

{% endif %}

{% endblock %}
