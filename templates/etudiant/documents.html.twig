{% extends 'base.html.twig' %}

{% block title %}Demandes acceptées{% endblock %}

{% block body %}

<a class="m-3 btn btn-primary" href="{{ path('etudiant_accueil' , { 'id': etudiant.id}) }}}">Retour</a>

<h1 id="nav-breadcrumbs" class="mt-5 display-5 text-center text-success">
    Les demandes des certificats </span>
</h1>

{% if demande == null  %}   
<div class="alert alert-dismissible alert-warning text-center m-5 mx-auto" style="width: 40rem">
<h4 class="alert-heading ">Aucune demande envoyée</h4>
</div>
{% else %}   
<table class="table table-hover mt-5">
<thead>
    <thead>
        <tr>
            <th scope="col">Type</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
            {% for demande in demande %}

        <tr class="table-warning">
            <td>
            
                {{ demande.type }}
            </td>
            <td>
                {% if demande.accepted == 1 %}
                        {% if demande.type == "Certificat de scolarité" %}
                                <a class=" text-success text-center" href="{{ path('etudiant_document', {'id': etudiant.getId} )}}">Consulter</a> 
                                {% else %}
                                <a class=" text-success text-center" href="#">Consulter</a> 
                        {% endif %}

                {% elseif demande.accepted == 0 %} 
                    <p>  Demande non encore acceptée</p>
                {% endif %}
            
        {% endfor %}

            </td>
        </tr>
    </tbody>
</table> 


    
{% endif %}

{% endblock %}